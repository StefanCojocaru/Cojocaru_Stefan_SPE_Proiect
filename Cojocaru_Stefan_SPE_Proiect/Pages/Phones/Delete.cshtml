@page
@model Cojocaru_Stefan_SPE_Proiect.Pages.Phones.DeleteModel

@{
    ViewData["Title"] = "Buy";
}
<style>
.BuyButton {
        background-color: #4CAF50;
        border: none;
        padding: 7px 15px;
        text-align: center;
        display: inline-block;
    }
</style>


<h3>Are you sure you want to buy this smartphone?</h3>
<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Phone.Brand)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Phone.Brand)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Phone.Model)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Phone.Model)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Phone.RAM)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Phone.RAM)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Phone.Storage)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Phone.Storage)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Phone.Year)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Phone.Year)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Phone.ID" />
        
        <input type="submit" value="BUY" class="BuyButton" style="color:antiquewhite" />

<a asp-page="./Index">Back</a>
    </form>
</div>
